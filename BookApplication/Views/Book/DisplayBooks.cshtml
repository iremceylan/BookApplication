

@model List<BookApplication.Models.Book>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}




<table>
    <tr>
        <th>Name</th>
        <th>Author</th>
        <th>Page Number</th>
        <th>Due Date</th>
        <th>Status</th>
    </tr>

    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Name</td>
            <td>@book.Author</td>
            <td>@book.PageNumber</td>
            <td style="color: @book.GetDueDateColor();">@book.DueDate.ToShortDateString()</td>
            <td>
                @if (book.IsHomeworkUploaded)
                {
                    <span style="color: green;">Uploaded</span>
                }
                else
                {
                    <span style="color: red;">Not Uploaded</span>
                    @if (book.GetDueDateColor() == "yellow")
                    {
                        <br />
                        <span style="color: yellow;">Due Soon</span>
                    }
                }
            </td>
        </tr>
    }
</table>